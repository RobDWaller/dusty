{
    "name": "rbdwllr/dusty",
    "description": "A WordPress starter repo which uses Composer and Docker.",
    "authors": [
        {
            "name": "Rob Waller",
            "email": "rdwaller1984@googlemail.com"
        }
    ],
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "require": {
        "johnpbloch/wordpress": "^4.0",
        "wpackagist-plugin/wordpress-seo": "^7.0",
        "wpackagist-plugin/advanced-custom-fields": "^5.0",
        "wpackagist-theme/twentynineteen": "^1.0",
        "vlucas/phpdotenv": "^2.4",
        "rbdwllr/wordpress-salts-generator": "^0.2",
        "rbdwllr/atlantic-city": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "phpstan/phpstan": "^0.9"
    },
    "extra": {
        "installer-paths": {
            "public/wp-content/mu-plugins/{$name}": ["type:wordpress-muplugin"],
            "public/wp-content/plugins/{$name}": ["type:wordpress-plugin"],
            "public/wp-content/themes/{$name}": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public/wordpress"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Theme\\": "public/wp-content/themes/project-theme/Theme/"
        }
    },
    "scripts": {
        "make-environment": [
            "cp .env.example .env",
            "vendor/bin/wpsalts dotenv --clean >> .env"
        ]
    }
}
